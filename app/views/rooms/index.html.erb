<%= stylesheet_link_tag 'rooms', media: 'all', 'data-turbo-track': 'reload' %>



<%= turbo_frame_tag 'rooms_controller' do%>
<main class="flex w-full h-screen ">
  <%= render 'shared/side_bar' %>
  <section class="flex flex-col items-center justify-center gap-5 h-screen w-full">
      <%= image_tag('chat.png', width:200) %>
      <h1 class="font-bold text-4xl text-white my-4">Ticket app - ruby on rails 7</h1>
      
      <p class="text-center font-semibold text-white">Es una aplicacion con RoR</p>
  </section>
  <nav class="bg-[#2B2F4A] w-60 flex flex-col items-center justify-between border border-purple-500 h-screen overflow-y-auto">
    <div class="flex-1 overflow-y-auto w-full">
      <%= render 'shared/completed_rooms' %>
    </div>
  </nav>
</main>
<%end%>
